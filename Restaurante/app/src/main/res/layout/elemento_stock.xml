<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/colorUnselected">

    <TextView
        android:id="@+id/QantityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:text="CANTIDAD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textQuantity" />

    <EditText
        android:id="@+id/textQuantity"
        android:layout_width="66dp"
        android:layout_height="53dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"
        android:clickable="true"
        android:contextClickable="true"
        android:cursorVisible="true"
        android:digits="3"
        android:ems="10"
        android:enabled="true"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textPrice"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ItemName"
        android:layout_width="121dp"
        android:layout_height="79dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:textSize="30sp"
        android:text="Item de comida"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/precioTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="PRECIO"
        app:layout_constraintStart_toEndOf="@+id/ItemName"
        app:layout_constraintTop_toBottomOf="@+id/textPrice" />

    <EditText
        android:id="@+id/textPrice"
        android:layout_width="71dp"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:inputType="numberSigned|number|numberDecimal"
        android:text="0"
        app:layout_constraintEnd_toStartOf="@+id/textQuantity"
        app:layout_constraintStart_toEndOf="@+id/ItemName"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>